{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "build",
        "strictNullChecks": true,
        "lib": [
            "dom",
            "es2017.object",
            "esnext",
            "esnext.asynciterable"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "./node_modules",
            "./@types"
        ]
    },
    "include": [
        "./*.ts",
        "./@types/**/*"
    ]
}