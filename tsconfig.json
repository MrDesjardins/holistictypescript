{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "build",
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "lib": [
            "dom",
            "es2017.object",
            "esnext",
            "esnext.asynciterable"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts",
        "@types/**/*.d.ts"
    ]
}